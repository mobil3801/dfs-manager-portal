# DFS Manager Portal - Environment Configuration Template
# Copy this file to .env.local and configure with your actual values

# ===== CORE APPLICATION CONFIGURATION =====
VITE_APP_NAME="DFS Manager Portal"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# ===== EASYSITE DATABASE CONFIGURATION =====
# This project uses EasySite's built-in database system
# No external database configuration required
VITE_DATABASE_TYPE="easysite"
ENABLE_EASYSITE_DATABASE=true

# ===== PROJECT CONFIGURATION =====
# Database uses EasySite built-in PostgreSQL database for all data operations
APP_NAME="DFS Manager Portal"
APP_URL="${window.location.origin}"

# ===== FEATURE FLAGS =====
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_SMS_ALERTS=true
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_VISUAL_EDITING=true
ENABLE_REALTIME_UPDATES=true
ENABLE_FILE_COMPRESSION=true

# ===== SECURITY SETTINGS =====
VITE_SESSION_TIMEOUT_MINUTES=480
VITE_ENABLE_MFA=false
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=1800

# ===== PERFORMANCE CONFIGURATION =====
ENABLE_CACHING=true
CACHE_TTL=300
MAX_FILE_SIZE=10485760
COMPRESSION_ENABLED=true

# ===== BUSINESS CONFIGURATION =====
VITE_DEFAULT_STATION="MOBIL"
VITE_CURRENCY_CODE="USD"
VITE_TAX_RATE_PERCENTAGE=8.25
VITE_LOW_STOCK_THRESHOLD=10

# ===== EXTERNAL INTEGRATIONS =====
# SMS Configuration (ClickSend)
# VITE_CLICKSEND_USERNAME=your_clicksend_username
# VITE_CLICKSEND_API_KEY=your_clicksend_api_key

# Email Configuration
# VITE_EMAIL_FROM_ADDRESS=noreply@your-domain.com

# ===== DEVELOPMENT SETTINGS =====
VITE_DEBUG_MODE=false
VITE_SHOW_AUTH_DEBUG=false

# ===== INSTRUCTIONS =====
# 1. Copy this file to .env.local
# 2. This project uses EasySite's built-in database system
# 3. No external database setup required
# 4. All data is automatically handled by EasySite's PostgreSQL backend
# 5. Never commit actual API keys or sensitive data to version control